<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="640dp"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="7">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:onClick="borrar"
            android:text="CA"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:onClick="borrar"
            android:text="C"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="3dp"

            android:onClick="cambiarOperador"
            android:text="%"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="3dp"

            android:onClick="cambiarOperador"
            android:text="/"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="7"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="8"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="9"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="3dp"

            android:onClick="cambiarOperador"
            android:text="X"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="6"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="3dp"

            android:onClick="cambiarOperador"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="3"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="3dp"

            android:onClick="cambiarOperador"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="seleccionarNumero"
            android:text="."
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button24"
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_margin="3dp"

            android:onClick="igual"
            android:text="="
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <!-- funcionalidades avanzadas-->
        <Button
            android:id="@+id/btnSin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:onClick="insertarSin"
            android:text="Sin" />

        <Button
            android:id="@+id/btnCos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:onClick="insertarCos"
            android:text="Cos" />

        <Button
            android:id="@+id/btnTan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:onClick="insertarTan"
            android:text="Tan" />

        <Button
            android:id="@+id/btnRaiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:onClick="insertarRaiz"
            android:text="Raíz" />

        <Button
            android:id="@+id/btnAbrirParentesis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="insertarAbrirParentesis"
            android:text="(" />

        <Button
            android:id="@+id/btnCerrarParentesis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="insertarCerrarParentesis"
            android:text=")" />


        <Button
            android:id="@+id/btnHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mostrarHistorial"
            android:text="Historial" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/material_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






    </GridLayout>
</LinearLayout>